{
  "name": "Summarize",
  "namespace": "Stanford\\Summarize",
  "description": "This is a utility EM to make summaries of data within a project. This EM is based off the summarize plugin.",
  "authors": [
    {
      "name": "Andy Martin",
      "email": "andy123@stanford.edu",
      "institution": "Stanford University"
    },
    {
      "name": "Lee Ann Yasukawa",
      "email": "yasukawa@stanford.edu",
      "institution": "Stanford University"
    }
  ],

  "permissions": [
    "redcap_module_save_configuration",
    "redcap_save_record"
  ],

  "links": {
    "control-center": [
      {
        "name": "Summarize Instructions",
        "icon": "gear",
        "url": "instructions.php"
      }
    ],
    "project": [
    ]
  },

  "no-auth-pages": [
  ],
  "crons": [
  ],

  "system-settings": [
    {
      "key": "enable-system-debug-logging",
      "name": "<b>Enable Debug Logging (system-wide)</b><i>(Requires emLogger)</i>",
      "required": false,
      "type": "checkbox"
    }

  ],

  "project-settings": [
    {
      "key": "instance",
      "name": "<b>Configure Summarize Instance</b>",
      "required": true,
      "type": "sub_settings",
      "repeatable": true,
      "sub_settings": [
        {
          "key": "event_id",
          "name": "<b>Event id where the data is located</b><br/>Must include both source and destination fields",
          "required": true,
          "type": "event-list"
        },
        {
          "key": "destination_field",
          "name": "<b>Field where the summarized data will be stored</b> (either 'text' or 'textarea' field)<br>NOTE: You will also need a field to display the piped results.",
          "required": true,
          "type": "field-list"
        },
        {
          "key": "title",
          "name": "<b>Title for summarize block</b><br/>Alternately you can add a title before you pipe in the result",
          "required": false,
          "type": "text"
        },
        {
          "key": "include_forms",
          "name": "<b>List of forms to include</b><br/>A commas-separated list of form names",
          "required": false,
          "type": "text"
        },
        {
          "key": "include_fields",
          "name": "<b>List of individual fields to include</b><br/>A comma-separated list of fields (in addition to above forms)",
          "required": false,
          "type": "text"
        },
        {
          "key": "exclude_fields",
          "name": "<b>List of fields to exclude (used with forms)</b><br/>A comma-separated list of fields to exclude",
          "required": false,
          "type": "text"
        }
      ]
    },
    {
      "key": "enable-project-debug-logging",
      "name": "<b>Enable Debug Logging</b> <i>(Requires emLogger)</i>",
      "required": false,
      "type": "checkbox",
      "source": "js/config.js",
      "functionName": "SummarizeConfig.config"
    }

  ]
}
